{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xip",
  "version": "0.1.0",
  "identifier": "com.gallo.xip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Xip",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logoseal.png",
      "icons/xiplogo.png"
    ]

  }
}
